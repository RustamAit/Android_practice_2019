<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/articleTitleTextView"
            android:text="TextView"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/bodyTextView"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:maxLines="4"
            android:text="asafsdfdfgdfgdfgdfhfghfgh;djfgkjdklnjgdfjgknjfgdfkjgdkfjgdkfgjdlkgjf"
            android:ellipsize="end"
            android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/articleTitleTextView"
    app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/articleYearTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/bodyTextView"
    app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>